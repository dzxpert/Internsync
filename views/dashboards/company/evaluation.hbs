<script>
    $(document).ready(function() {
    function updateTotal() {
        const technicalSkill = parseFloat($('#technical-skill').val()) || 0;
        const teamwork = parseFloat($('#teamwork').val()) || 0;
        const problemSolving = parseFloat($('#problem-solving').val()) || 0;
        const presence = parseFloat($('#presence').val()) || 0;

        const total = technicalSkill + teamwork + problemSolving + presence;
        $('#total').val(total);
    }

    // Handle the click event on the evaluate button
    $('.view-evaluation-btn').on('click', function() {
        var internshipRow = $(this).closest('.internship-row');
        var internshipId = internshipRow.data('internship-id');

        // Make an AJAX request to get the attendance notes and presence grade
        $.get(`/company/evaluation/${internshipId}/attendance_notes`, function(data) {
            if (data && data.notes && Array.isArray(data.notes)) {
                // Display the notes in a SweetAlert2 modal with customized settings
                Swal.fire({
                    title: 'Submit Evaluation',
                    width: '50%', // Set a larger width for the modal
                    html: `
                        <div class="row">
                            <!-- Evaluation form column -->
                            <div class="col-md-6 col-xs-12">
                                <form id="evaluation-form">
                                    <div class="mb-3">
                                        <label for="technical-skill" class="form-label">Technical Skill:</label>
                                        <input type="number" id="technical-skill" name="technical_skill" class="form-control" min="0" max="5" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="teamwork" class="form-label">Teamwork:</label>
                                        <input type="number" id="teamwork" name="teamwork" class="form-control" min="0" max="5" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="problem-solving" class="form-label">Problem Solving:</label>
                                        <input type="number" id="problem-solving" name="problem_solving" class="form-control" min="0" max="5" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="presence" class="form-label">Presence:</label>
                                        <input type="number" id="presence" name="presence" class="form-control" min="0" max="5" disabled required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="total" class="form-label">Total:</label>
                                        <input type="number" id="total" name="total" class="form-control" disabled>
                                    </div>

                                    <div class="mb-3">
                                        <label for="comment" class="form-label">Comment:</label>
                                        <textarea id="comment" name="comment" class="form-control" rows="3" placeholder="Enter your comments here..." required></textarea>
                                    </div>
                                </form>
                            </div>

                            <!-- Attendance notes column -->
                            <div class="col-md-4 col-xs-12">
                                <div>
                                    <h4>Attendance Notes</h4>
                                    <ul>
                                        ${data.notes.map(note => `
                                            <li>${note.date}: ${note.notes}</li>
                                        `).join('')}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    `,
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                    cancelButtonText: 'Cancel',
                    didOpen: () => {
                        // Set the presence grade and update the total score
                        $('#presence').val(parseFloat(data.presenceGrade).toFixed(2));
                        updateTotal();

                        // Add change listeners to update the total score
                        $('#technical-skill, #teamwork, #problem-solving').on('input', updateTotal);
                    },
                    preConfirm: () => {
                        // Collect the form data
                        const formData = {
                            technical_skill: $('#technical-skill').val(),
                            teamwork: $('#teamwork').val(),
                            problem_solving: $('#problem-solving').val(),
                            presence: $('#presence').val(),
                            total: $('#total').val(),
                            comment: $('#comment').val(),
                            internship_id: internshipId
                        };

                        // Make a POST request to submit the evaluation
                        return $.post(`/company/evaluation/submit`, formData)
                            .then((response) => {
                                if (response.message === 'Evaluation already exists') {
                                    Swal.fire('Notice', 'An evaluation for this internship already exists.', 'info').then(() => {
                                        location.reload(); // Refresh the page to see changes
                                    });
                                } else {
                                    Swal.fire('Success', 'Evaluation submitted successfully', 'success').then(() => {
                                        location.reload(); // Refresh the page to see changes
                                    });
                                }
                            })
                            .fail(() => {
                                Swal.fire('Error', 'Failed to submit evaluation', 'error');
                            });
                    }
                });
            } else {
                console.error('Unexpected data format:', data);
                Swal.fire('Error', 'Unexpected data format from server', 'error');
            }
        });
    });

    // Handle the input event on the input fields to limit the value to a maximum of 5
    $('#technical-skill, #teamwork, #problem-solving').on('input', function() {
        const maxValue = 5;
        const currentValue = parseFloat($(this).val());
        
        if (currentValue > maxValue) {
            $(this).val(maxValue);
        }
    });
});

