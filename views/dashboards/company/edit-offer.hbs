            <form id="offer-form" offer-id="{{offer.offer_id}}">
              <div class="mb-4">
                <h5 class="mb-3">Offer Title</h5>
                <input type="text" class="form-control" id="offer-title" name="title" placeholder="Write title here..." value="{{offer.title}}" required>
              </div>
              <div class="mb-4">
                <h5 class="mb-3">Offer Description</h5>
                <textarea class="form-control" id="offer-description" name="description" cols="4" rows="6" placeholder="Write a description here..." required>{{offer.description}}</textarea>
              </div>
              <div class="mb-4">
                <h5 class="mb-3">Department</h5>
                <select class="form-control" id="department" name="department" required>
                  <option value="{{this.DEPPA}}" disabled>Select department</option>
                  {{#each departments}}
                    <option value="{{this.dep_id}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="mb-4">
                <h5 class="mb-3">Expiration Date</h5>
                <input type="date" class="form-control" id="expiration_date" name="expiration_date" value="{{offer.expiration_date}}" required>
              </div>
              <div class="mb-4">
                <h5 class="mb-3">Duration (in weeks)</h5>
                <input type="number" class="form-control" id="duration" name="duration" placeholder="Enter duration in weeks..." value="{{offer.duration}}" required>
              </div>
              <div class="d-flex align-items-center gap-3">
                <a type="button" class="btn btn-outline-danger flex-fill" href="/company/offers/"><i class="bi bi-x-circle me-2"></i>Discard</a>
                <button type="submit" class="btn btn-outline-primary flex-fill"><i class="bi bi-send me-2"></i>Save Changes</button>
              </div>
            </form>
