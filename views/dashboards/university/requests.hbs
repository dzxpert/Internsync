<script>
$(document).ready(function() {
    // Handle approve button click
    $('.approve-btn').on('click', function() {
        var requestId = $(this).attr('request-id');
        $.ajax({
            url: `/university/request/${requestId}/approve`, // The URL for the approval route
            method: 'GET',
            success: function(response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Request Approved',
                    text: 'The request has been approved successfully!'
                }).then(function() {
                    // Refresh the page after the user acknowledges the alert
                    location.reload();
                });
            },
            error: function(error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Approval Failed',
                    text: 'There was an error approving the request.'
                });
            }
        });
    });

    // Handle reject button click
    $('.reject-btn').on('click', function() {
        var requestId = $(this).attr('request-id');
        // Define predefined rejection reasons
        var rejectionReasons = {
            1: 'Reason 1',
            2: 'Reason 2',
            3: 'Reason 3',
            4: 'Reason 4',
            5: 'Reason 5',
            6: 'Reason 6'
        };

        // Show SweetAlert dialog to select rejection reason
        Swal.fire({
            title: 'Select Rejection Reason',
            input: 'select',
            inputOptions: rejectionReasons,
            inputPlaceholder: 'Choose a reason',
            showCancelButton: true,
            confirmButtonText: 'Submit',
            cancelButtonText: 'Cancel'
        }).then(function(result) {
            if (result.isConfirmed) {
                // Send AJAX request to decline the request with the selected reason ID
                $.ajax({
                    url: `/university/request/${requestId}/reject`, // The URL for the rejection route
                    method: 'POST',
                    data: { rejectionReasonId: result.value },
                    success: function(response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Request Declined',
                            text: 'The request has been declined successfully!'
                        }).then(function() {
                            // Refresh the page after the user acknowledges the alert
                            location.reload();
                        });
                    },
                    error: function(error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Decline Failed',
                            text: 'There was an error declining the request.'
                        });
                    }
                });
            }
        });
    });
});
</script>


