<script>
    // Initialize Select2 on the company selection dropdown
    $('#company-select').select2({
        placeholder: 'Select a company...',
        allowClear: true,
        tags: true,
        createTag: function(params) {
            // Avoid duplicate 'other' options
            if (params.term === '' || $('#company-select option[value="other"]').length > 0) {
                return null;
            }
            return {
                id: 'other',
                text: 'Not listed?',
            };
        }
    });

function checkSupervisorEmailValidity(email) {
    return $.ajax({
        url: '/api/check-email-valid',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ email }),
        dataType: 'json',
        success: function(response) {
            return response; // Return the response from the server
        },
        error: function(error) {
            console.error('Error checking email validity:', error);
            return false; // Return false in case of an error
        }
    });
}

    // Toggle extra company input based on the selection
    $('#company-select').on('change', function() {
        const selectedValue = $(this).val();
        const extraCompanySection = $('#extraCompany');
        const companyNameInput = $('#companyName');

        // Toggle visibility and required attribute
        if (selectedValue === 'other') {
            extraCompanySection.show();
            companyNameInput.attr('required', true);
        } else {
            extraCompanySection.hide();
            companyNameInput.attr('required', false);
        }
    });

    // Initially hide the extra company input
    $('#extraCompany').hide();

    // Function to check supervisor email and fill in supervisor details if found
    async function checkSupervisorEmail() {
    const email = $('#supervisorEmail').val();
    
    try {
        // Call the asynchronous function to check email validity
        const isValidEmail = await checkSupervisorEmailValidity(email);
        // If email is not valid, show an alert and return
        if (isValidEmail.exists == true) {
            alert('Double check this email');
            return false;
        }
        
        // If email is valid, proceed with the AJAX call to check supervisor
        if (email) {
            return $.ajax({
                url: '/api/check-supervisor',
                type: 'POST',
                data: { email: email },
                dataType: 'json',
                success: function(response) {
                    if (response && response.message === 'found') {
                        // Fill in supervisor details and company select if found
                        $('#firstName').val(response.supervisor.firstName);
                        $('#lastName').val(response.supervisor.lastName);
                        $('#company-select').val(response.company.id).trigger('change');
                        $('#extraInputs').show();
                        return true;
                    } else {
                        $('#extraInputs').show();
                        return false;
                    }
                },
                error: function(error) {
                    console.error('AJAX request error:', error);
                    return false;
                }
            });
        }
    } catch (error) {
        console.error('Error checking email validity:', error);
        return false;
    }
}



    // Event handler for the "Check" button
    $('#checkSupervisorBtn').on('click', function() {
        checkSupervisorEmail();
    });

    // Form submission event handler
    $('#internshipForm').on('submit', async function(event) {
        event.preventDefault(); // Prevent default form submission
        checkSupervisorEmail();
        // Reference the form
        const form = event.currentTarget;
        form.classList.add('was-validated');

        // Check if all required fields are filled
        const isFormValid = form.checkValidity();
        if (!isFormValid) {
            Swal.fire({
                icon: 'warning',
                title: 'Incomplete Form',
                text: 'Please fill in all required fields.'
            });
            return;
        }

        // If supervisor details are not filled, check the supervisor email
        if (!$('#firstName').val() || !$('#lastName').val()) {
            const supervisorExists = await checkSupervisorEmail();
            if (!supervisorExists) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Incomplete Supervisor Details',
                    text: 'Please check the supervisor email and fill in the details.'
                });
                return;
            }
        }

        // Collect form data for submission
        const formData = {
            supervisorEmail: $('#supervisorEmail').val(),
            firstName: $('#firstName').val(),
            lastName: $('#lastName').val(),
            duration_weeks: $('#duration_weeks').val(),
            company_id: $('#company-select').val(),
            company_name: $('#companyName').val()
        };

        // AJAX request for form submission
        $.ajax({
            url: '/student/request-internship', // Adjust the URL as needed
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                console.log(response)
                // Handle success and error responses from the server
                if (response.success && response.submitted) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Internship request submitted successfully!'
                    }).then(() => {
                        window.location.href = '/student/requests'; // Redirect to /student/requests
                    });
                    form.reset();
                    form.classList.remove('was-validated');
                } else if (response.exists && !response.success) {
                    Swal.fire({
                        icon: 'info',
                        title: 'Request Exists',
                        text: 'An internship request with this information already exists.'
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred. Please try again.'
                    });
                }
            },
            error: function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Submission Error',
                    text: 'An error occurred while submitting the request. Please try again.'
                });
            }
        });
    });
