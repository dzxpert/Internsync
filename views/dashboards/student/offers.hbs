<script>
    $(document).ready(function() {
        // Attach a click event listener to all buttons with the class 'apply-btn'
        $('.apply-btn').on('click', function(event) {
            event.preventDefault(); // Prevent the default form submission
            
            // Get the offer ID from the offer-id attribute of the clicked button
            const offerId = $(this).attr('offer-id');
            
            // Build the URL using the offer ID
            const url = `/student/offer/${offerId}/apply`;
            
            // Send an AJAX GET request to the URL
            $.ajax({
                url: url,
                type: 'GET',
                success: function(response) {
                    // Check if there's an error in the response
                    if (response.error) {
                        // Display an error SweetAlert
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops!',
                            text: response.error
                        });
                    } else {
                        // Display a success SweetAlert
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message
                        });
                    }
                },
                error: function(error) {
                    // Handle any request errors and display an error SweetAlert
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops!',
                        text: 'Failed to submit application. Please try again.'
                    });
                }
            });
        });
    });
</script>



